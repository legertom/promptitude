<div class="container">
  <h1 class="my-4">Promptitude Job Listings</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        
        <th>Company</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @jobs.each do |job| %>
        <tr>
        <td><%= link_to job.title, job_path(job) %></td>
         
          <td><%= job.company %></td>
          <td><%= link_to 'View', job, class: "btn btn-primary" %></td>
          <td><%= link_to 'Edit', edit_job_path(job), class: "btn btn-secondary" %></td>
          <td><%= link_to 'Delete', job, method: :delete, data: { confirm: 'Are you sure you want to delete this prompt engineering job?' }, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Job', new_job_path, class: "btn btn-success" %>
</div>